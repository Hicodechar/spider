<span class="p_add">+	spin_lock_init(&amp;mm-&gt;context.tag_lock);</span>
<span class="p_add">+</span>
 #if defined(CONFIG_HUGETLB_PAGE) || defined(CONFIG_TRANSPARENT_HUGEPAGE)
