<span class="p_del">-			d-&gt;config.cfg_access.pci_cfg_data, write_mask,</span>
<span class="p_del">-			d-&gt;config.cfg_access.cap.bar,</span>
<span class="p_del">-			d-&gt;config.cfg_access.cap.offset,</span>
