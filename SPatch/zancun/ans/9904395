<span class="p_del">-		if (!allocate_switcher_mapping(cpu))</span>
<span class="p_del">-			kill_guest(cpu, &quot;Cannot populate switcher mapping&quot;);</span>
<span class="p_del">-	}</span>
<span class="p_del">-}</span>
