<span class="p_del">-	if (errcode &amp; 2)</span>
<span class="p_del">-		gpte = pte_mkdirty(gpte);</span>
<span class="p_del">-</span>
<span class="p_del">-	/* Get the pointer to the shadow PTE entry we&#39;re going to set. */</span>
